extends ../templates/_generator.pug

block data
	- var pageTitle = "l3_gradient"

block controls
	fieldset.generator__fieldset.generator__fieldset
		span.generator__directions Upload a portrait-oriented photo. It's optional.
		input(type="file" accept=".jpg, .jpeg, .png" style="display: none")
		span.generator__input.generator__input--image No file uploaded yet.
		button.generator__button(type="button" onclick="generate.presets.l3GradientImage(this)") Choose Image
	fieldset.generator__fieldset
		span.generator__directions Drag and re-order, or remove text as needed.
		#jsSortable
		.js-sortable-item
			span.generator__label Heading
			input.generator__input.generator__input--text(type="text" placeholder="Type large text here..." data-font-size="50" data-font-weight="800")
			span.js-sortable-move
			span.js-sortable-remove
		.js-sortable-item
			span.generator__label Subheading
			input.generator__input.generator__input--text(type="text" placeholder="Type small text here..." data-font-size="40" data-font-weight="400")
			span.js-sortable-move
			span.js-sortable-remove
		.js-sortable-item
			span.generator__label Subheading
			input.generator__input.generator__input--text(type="text" placeholder="Type small text here..." data-font-size="40" data-font-weight="400")
			span.js-sortable-move
			span.js-sortable-remove
		button.generator__button(type="button" onclick="generate.presets.l3GradientText(this)") Add Text Group
	fieldset.generator__fieldset
		span.generator__directions Name your file. All files save as .png.
		input.generator__input.generator__input--text(type="text" placeholder="Type a file name here.")
		button.generator__button(type="button" onclick="generate.download(this)") Download File

prepend scripts
	script(src="js/Sortable.min.js")
