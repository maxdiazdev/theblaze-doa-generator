doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title TheBlaze â€“ Day-of-Air Graphics Generator
    meta(name="description", content="A client-side application for TV producers that generates screen graphics.")
    meta(name="author", content="Max Giron")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="css/styles.css")
    link(rel="icon", type="image/png", href="images/favicon.png")
      
  body
    .generator
      header.generator__header
        h1.generator__title Create your graphic
      section.generator__preview
        h2.generator__caption Preview
        canvas.generator__canvas(width="1280" height="720" data-template="l3_phoner")
      section.generator__controls
        fieldset.generator__fieldset
          label.generator__directions Add phoner's name and their description.
          //- span.generator__label Small Text
          //- input.js-add-text-group.generator__input.generator__input--text(type="text" placeholder="Type small text here..." data-font-size="33" data-font-weight="500")
          span.generator__label Name
          input.js-add-text-group.generator__input.generator__input--text(type="text" placeholder="Example: John Smith" data-font-size="43" data-font-weight="600")
          span.generator__label Description
          input.js-add-text-group.generator__input.generator__input--text(type="text" placeholder="Example: Admiral of New England" data-font-size="33" data-font-weight="400")
          button.generator__button(type="button") Add Text Group
        fieldset.generator__fieldset.generator__fieldset--disabled
          label.generator__directions Upload phoner's photo. Must be portrait-oriented.
          input.js-upload-phoner(type="file" accept=".jpg, .jpeg, .png" style="display: none" disabled)
          span.generator__input.generator__input--image No file uploaded yet.
          button.generator__button(type="button" disabled) Choose Image
        fieldset#jsAdjustPhoner.generator__fieldset.generator__fieldset--disabled
          label.generator__directions Adjust the photo horizontally, if needed.
          input#jsDisplayYPos.generator__input.generator__input--number(type="number" min="0" max="100" step="10" placeholder="Y Position")
          button.js-ypos-decrease.generator__button(type="button" disabled) -10%
          button.js-ypos-increase.generator__button(type="button" disabled) +10%
        fieldset.generator__fieldset.generator__fieldset--disabled
          label.generator__directions Name your file. All files save as .png.
          input.js-file-name.generator__input.generator__input--text(type="text" placeholder="Example: L3-PHONER_John-Smith" disabled)
          button.generator__button(type="button" disabled) Download File
  script(src="js/file-saver.min.js")
  script(src="js/Sortable.min.js")
  script(src="js/generator.js")
